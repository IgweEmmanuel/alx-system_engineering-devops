#!/usr/bin/env bash
#Redirect a web domain to another domain

sudo apt-get update
sudo apt-get install -y nginx

sudo sed -i '/^server {/a \
        listen 80 default_server;\n\
        listen [::]:80 default_server;\n\

        server_name _;\n\

        root /var/www/html;\n\
        index index.hmtl index.htm index.nginx-debian.html;\n\

        location /redirect_me {\n\
                return 301 https:\/\/youtube.com;\n\
        }\n\

        location / {\n\
                try_files \$uri \$uri\/ =404;\n\
        }
}" | sudo tee /etc/nginx/sites-available/default > /dev/null

sudo service nginx restart
